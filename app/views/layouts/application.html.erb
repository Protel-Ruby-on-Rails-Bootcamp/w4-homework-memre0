<!DOCTYPE html>
<html>
  <head>
    <title>MeyBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
				<%#= image_tag "logo.svg" %>
			<% end %>
		</div>
<% if user_signed_in? %>
		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Blog", dashboard_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>
<% end %>
		<ul>
			<li class="category">Social</li>
			<li><a href="#">Twitter</a></li>
			<li><a href="#">Instagram</a></li>
			<li><a href="#">Github</a></li>
			<li><a href="#">Email</a></li>
		</ul>

		<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
		<% end %>
	</div>

	<div id="main_content">
		<div id="header">
		<% if user_signed_in? %>
			<% if current_page?(root_path) %>
				<p>All Posts</p>
			<% elsif current_page?(about_path) %>
				<p>About</p>
			<% else %>
				<%= link_to "Back to All Posts", root_path %>
			<% end %>
		<% end %>

			<% if user_signed_in? %>
				<div class="buttons">
					<button class="button"><%= link_to "New Post", new_post_path %></button>
					<button class="button"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></button>
				</div>
			<% else %>
				<div class="buttons">
					<button class="button"><%= link_to 'Sign In', new_user_session_path %></button>
					<button class="button"><%= link_to 'Sign Up', new_user_registration_path %></button>
				</div>
			<% end %>
		</div>

		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert") %>
		<% end %>
			<%= yield %>

	</div>
</body>
</html>